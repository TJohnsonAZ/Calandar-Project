<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#555"
    android:padding="10px">

    <TextView
        android:id="@+id/popupWindowText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="This Is a Pop Up"
        android:textColor="@color/Black"
        />

    <Button
        android:id="@+id/completeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F2F2"
        android:onClick="completedDayButton"
        android:text="Complete"
        app:backgroundTint="@color/Green" />

    <Button
        android:id="@+id/notcompleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3D9D9"
        android:onClick="nonCompletedDayButton"
        android:text="Not Complete"
        app:backgroundTint="@color/DarkRed" />

    <Button
        android:id="@+id/clearColorButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clearDayButton"
        android:text="Clear Day?"
        android:textColor="@color/Black"
        app:backgroundTint="@color/LightGrey" />
</LinearLayout>